<div class="contatiner">
  <h1>Add your crazy pet for rent to make $$$</h1>

  <%= simple_form_for [ @pet ] do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :species %>
    <%= f.input :image_url %>
    <%= f.submit "Add my pet", class: "btn btn-primary" %>
  <% end %>
</div>
