<div class="container">
  <h1>Add your crazy pet for rent to make $$$</h1>
  <div class="form-container">

      <%= simple_form_for [ @pet ] do |f| %>
        <%= f.input :photo, as: :file %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :species %>
        <%= f.submit "Add my pet", class: "btn btn-primary" %>

    </div>
    <% end %>
</div>
